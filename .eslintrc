{
    "rules": {
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ]
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "globals": {
      "describe": true,
      "it": true,
      "before": true,
      "beforeEach": true,
      "afterEach": true
    },
    ecmaFeatures: {
      modules: true
    },
    "extends": "eslint:recommended"
}
