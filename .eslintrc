{
    "rules": {
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ]
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "mocha": true
    },
    ecmaFeatures: {
      modules: true,
      experimentalObjectRestSpread: true
    },
    "extends": "eslint:recommended"
}
